<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_viewxml1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_tag_faces_24"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/text_viewxml1"
        android:layout_width="300dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_viewxml1"
        android:layout_marginTop="50dp"
        android:hint="Введите сообщение"
        android:background="@color/pink"
        />

    <Button
        android:id="@+id/buttonsms"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_viewxml1"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/red"
        android:text="Написать сообщение"
        android:textSize="10dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/buttongmail"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonsms"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/pink"
        android:text="Перейти в gmail"
        android:textSize="10dp"
        android:textColor="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

